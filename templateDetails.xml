	<author>Eike Hinderk Juerrens</author>
	<copyright>Copyright (C) 2012 - 2015 52North. All rights reserved.</copyright>
	<authorEmail>e.h.juerrens@52north.org</authorEmail>
	<authorUrl>http://52north.org/52-north-team/eike-hinderk-juerrens</authorUrl>
	<version>3.0.0</version>
	<description>TPL_52N-2012_XML_DESCRIPTION</description>

	<files>
		<folder>52n_menus</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>languages</folder>
		<filename>52n_templatetools_2.5.php</filename>
		<filename>52n_vars_2.5.php</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.tpl_52n-2012.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_52n-2012.sys.ini</language>
	</languages>

	<positions>
		<position>hornav</position>
		<position>breadcrumbs</position>
		<position>banner</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>footer-communities</position>
		<position>footer-get-involved</position>
		<position>footer-additional</position>
		<position>search</position>
		<position>top-spotlight</position>
		<position>footer-affiliations</position>
		<position>footer-partners</position>
		<position>footer</position>
		<position>debug</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="ja_font"
						class=""
						type="list"
						default="3"
						label="TPL_52N-2012_FIELD_JA_FONT_LABEL"
						description="TPL_52N-2012_FIELD_JA_FONT_DESC"
						filter="int">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
				</field>
				<field name="52n_font"
						class=""
						type="list"
						default="3"
						label="TPL_52N-2012_FIELD_52N_FONT_LABEL"
						description="TPL_52N-2012_FIELD_52N_FONT_DESC"
						filter="int">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
				</field>
				<field name="showComponent"
						type="radio"
						class=""
						default="1"
						label="TPL_52N-2012_FIELD_SHOW_COMPONENT_LABEL"
						description="TPL_52N-2012_FIELD_SHOW_COMPONENT_DESC"
						filter="int">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="logoType"
						type="list"
						class=""
						default="image"
						label="TPL_52N-2012_FIELD_LOGO_TYPE_LABEL"
						description="TPL_52N-2012_FIELD_LOGO_TYPE_DESC"
						filter="word">
					<option value="image">Image</option>
					<option value="text">Text</option>
				</field>
				<field name="logoText"
						type="text"
						class=""
						default="52Â°North"
						label="TPL_52N-2012_FIELD_LOGO_TEXT_LABEL"
						description="TPL_52N-2012_FIELD_LOGO_TEXT_DESC"
						filter="string" />
				<field name="sloganText"
						type="text"
						class=""
						default="exploring horizons"
						label="TPL_52N-2012_FIELD_SLOGAN_TEXT_LABEL"
						description="TPL_52N-2012_FIELD_SLOGAN_TEXT_DESC"
						filter="string" />
				<field name="ja_screen"
						type="list"
						class=""
						default="wide"
						label="TPL_52N-2012_FIELD_JA_SCREEN_LABEL"
						description="TPL_52N-2012_FIELD_JA_SCREEN_DESC"
						filter="word">
					<option value="wide">wide</option>
				</field>
				<field name="ja_color"
						type="list"
						class=""
						default="default"
						label="TPL_52N-2012_FIELD_JA_COLOR_LABEL"
						description="TPL_52N-2012_FIELD_JA_COLOR_DESC"
						filter="word">
					<option value="default">default</option>
				</field>
				<field name="menutype"
						type="list"
						class=""
						default="mainmenu"
						label="TPL_52N-2012_FIELD_MENUTYPE_LABEL"
						description="TPL_52N-2012_FIELD_MENUTYPE_DESC"
						filter="word">
					<option value="mainmenu">mainmenu</option>
				</field>
				<field name="ja_menu"
						type="list"
						class=""
						default="css"
						label="TPL_52N-2012_FIELD_JA_MENU_LABEL"
						description="TPL_52N-2012_FIELD_JA_MENU_DESC"
						filter="word">
					<option value="css">css</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
